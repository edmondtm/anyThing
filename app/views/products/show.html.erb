<div class="container">

<ol class="breadcrumb">
	<%= render_breadcrumbs :tag => :li, :separator => "" %>
</ol>

<h1 id="product_name"><%= @product.product_name %></h1>

<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 product-details-picture">
	<%= image_tag("pyrex_low_form_beaker.jpg", alt: "Pyrex Low Form Beaker", width:"100%") %> 
</div>

<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 product-details-description">
	<h4>Description</h4>
	<%= sanitize @product.product_description, tags: %w(ul ol li h1 h2 h3 h4 h5) %>

	<h4>Sold by:</h4>		
	<h5>KSFE Sdn Bhd</h5>

	<h4>Availability:</h4>
	<h5>Ex-Stock</h5>
</div>

<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 product-details-price well">

<h4 id="options">Select Options</h4>
  
<%= form_for @order_item do |cart| %>

	<%= hidden_field(:order_item, :product_id, :value => params[:id]) %>

	<%= select_tag "order_item[variation_id]", options_from_collection_for_select(@variation, "id", "option_in_show"), prompt: "Please Select", :required => true %>

<br><br><br>

<h4 id="quantity">Select Quantity</h4>

	<%= select_tag "order_item[order_quantity]", options_for_select(1..20), prompt: "Enter Quantity", :required => true %>

<br><br><br>

	<%= button_tag "Add to Cart", class: "btn btn-default" %>


