<div class="container">  

  <div class="col-lg-3 side-nav-bar">
    
    <nav>
        <div id="accordion" role="tablist" aria-multiselectable="true">
            <% @category.each do |category| %>
            <div role="tab" id="heading<%= category.id %>">
              <h4>
                <% if @subcategory.where(category_id: category.id).count > 0 %>
                  <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= category.category_name %>" aria-expanded="false" aria-controls="collapse<%= category.category_name %>">
                    <%= category.category_name.pluralize.titleize %>
                  </a>
                <% else %>
                  <%= link_to category.category_name.pluralize.titleize, controller: "products", category_id: category.id %>
                <% end %>
              </h4>
            </div>

            <% if @subcategory.where(category_id: category.id).count > 0 %>
            <div id="collapse<%= category.category_name %>" class="collapse" role="tabpanel" aria-labelledby="heading<%= category.category_name %>">
              <div class="panel-body">
                <% @subcategory.where(category_id: category.id).each do |subcategory| %>
                  <h5><%= link_to subcategory.subcategory_name.pluralize.titleize, controller: "products", subcategory_id: subcategory.id %></h5>
                <% end %>
              </div>
            </div>
            <% end %>
            
          <% end %>
           
        </div>    
    </nav>
  </div>

  <div class="col-lg-9">
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag("daisy.jpg", alt: "Consumables") %> 
      <div class="carousel-caption">
        <h3>Instant Quote</h3>
      </div>
    </div>
    <div class="item">
      <%= image_tag("green_trees_3-wallpaper-1366x768.jpg", alt: "Consumables") %> 
      <div class="carousel-caption">
        <h3>Easy Tracking</h3>
      </div>
    </div>
    <div class="item">
      <%= image_tag("tea_garden_4-wallpaper-1366x768.jpg", alt: "Consumables") %> 
      <div class="carousel-caption">
        <h3>ZERO Paperwork</h3>
      </div>
    </div>
    
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
  </div>


</div> <!-- container -->