<div class="container">

		<div class="col-lg-8">

			<h3>Shopping Cart - <% if @order_item.count > 0 %> 
				<%= @order_item.count %> 
					<% if @order_item.count > 1 %>
						items
					<% else %>
						item
					<% end %>
				<% else %> 
				Empty 
				<% end %>

			</h3>	

			

			<div class="col-lg-12">
				
				<div class="col-lg-8">
				</div>

				<div class="col-lg-2">
					<h4>Price</h4>
				</div>

				<div class="col-lg-2">
					<h4>Quantity</h4>
				</div>

			</div>

			<div class="col-lg-12">
				
			</div>

			<% @order_item.each do |oi| %>	
				<div class="col-lg-12">
					<hr>
					<div class="col-lg-2">
						<%= image_tag("pyrex_low_form_beaker.jpg", alt: "Scilab-brand Beaker", width: "100%"  ) %>
					</div>
					<div class="col-lg-6">
						
					<h4> <%= link_to oi.product_name, product_path(oi.product_id) %> </h4>
					
					<h5>Sold by: KSFE Sdn Bhd	</h5>
					<%= link_to "Delete", order_item_path(oi.id), method: :delete, data: { confirm: 'Are you sure ?' }  %>
					</div>
					<div class="col-lg-2">
					<h5>RM <%= oi.variation_price%></h5>

					</div>
					<div class="col-lg-2">
					<%= select_tag "order_item[order_quantity]", options_for_select(1..20, oi.order_quantity) %>
					</div>

				</div>
				<hr>

			<% end %>	

			
		</div> <!-- col-lg-8 -->

		<div class="col-lg-4">
			<div class="panel panel-default ">
	  	  		<div class="panel-heading">
	  	  			<h4>Check Out</h4>

	  	  		</div>

	  	  		<table class="table table-striped">
	  	  		<tr><td>Subtotal</td><td><%= number_to_currency(@order.subtotal, unit: "RM ") %></td></tr>
	  	  		<tr><td>Shipping</td><td><%= link_to "estimate shipping", "#" %> </td></tr>
	  	  		<tr><td>GST</td><td><%= number_to_currency(@order.subtotal * 0.06, unit: "RM ") %></td></tr>
	  	  		<tr><td>Total</td><td><%= number_to_currency(@order.subtotal * 1.06, unit: "RM ") %></td></tr>
	  	  		</table>
	  	  		<%= link_to "Check Out", "#", class:"btn btn-default center-block" %>
	  	  	</div>
	  	</div>

</div><!-- container -->
